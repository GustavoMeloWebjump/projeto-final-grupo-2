<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">



<referenceContainer name="footer" remove="true" />

<referenceContainer name="footer-container">
<container name="footer-content" htmlTag="div" htmlClass="block footer-content">
    <block class="Magento\Cms\Block\Block" name="footer_links_block">
        <arguments>
            <argument name="block_id" xsi:type="string">footer-pet</argument>
        </arguments>
    </block>
</container> 
</referenceContainer>

<referenceContainer name="footer-container">
<container name="footer-content-en" htmlTag="div" htmlClass="block footer-content-en">
    <block class="Magento\Cms\Block\Block" name="footer_links_block-en">
        <arguments>
            <argument name="block_id" xsi:type="string">footer-pet-en</argument>
        </arguments>
    </block>
</container> 
</referenceContainer>

<referenceBlock name="logo"> 

<arguments> 
    <argument name="logo_width" xsi:type="number">250</argument>
    <argument name="logo_height" xsi:type="number">200</argument>
    <argument name="logo_file" xsi:type="string">images/patinha.png</argument>

</arguments>

</referenceBlock>

<referenceBlock name="header" remove="false"/>
<referenceBlock name="header.panel" remove="false"/>

<referenceContainer name="main.content">
       <block class="Magento\Cms\Block\Block" name="botao_whatsapp">
           <arguments>
                <argument name="block_id" xsi:type="string">botao_whatsapp</argument>
           </arguments>
       </block>
    </referenceContainer>

</page>


